<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
	    <TextView android:id="@+id/textView1" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:text="Andruino Help"/>
	    <TextView android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content" 
	    	android:id="@+id/helpIntro"/>
	    <TextView android:text="Indicators Page" 
	    	android:id="@+id/textView11" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"/>
	    <TextView android:id="@+id/textView2" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content" 
	    	android:text="Checking the State of a Control"/>
	    <TextView android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/checkState"/>
	    <TextView android:id="@+id/textView4" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content" 
	    	android:text="Enabling Notifications for a Control"/>
	    <TextView android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/enableNotification"/>
	    <TextView android:text="Configuring an Indicator" 
	    	android:id="@+id/textView14" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"/>
	    <TextView android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/configureIndicator"/>
	    <TextView android:id="@+id/textView5" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content" 
	    	android:text="Adding a New Indicator"/>
	    <TextView android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/addIndicator"/>
	    <TextView android:text="Deleting an Indicator" 
	    	android:id="@+id/textView12" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"/>
	    <TextView android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/deleteIndicator"/>
	    <TextView android:id="@+id/textView9" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content" 
	    	android:text="ControlsPage"/>
	    <TextView android:text="Changing the State of a Control" 
	    	android:id="@+id/textView6" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"/>
	    <TextView android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/changeState"/>
	    <TextView android:id="@+id/textView10" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content" 
	    	android:text="Configuring a Control"/>
	    <TextView android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/configureControl"/>
	    <TextView android:text="Adding a New Control" 
	    	android:id="@+id/textView8" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"/>
	    <TextView android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/addControl"/>
	    <TextView android:text="Deleting a Control" 
	    	android:id="@+id/textView15" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content"/>
	    <TextView android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" 
	    	android:id="@+id/deleteControl"/>
	</LinearLayout>
</ScrollView>